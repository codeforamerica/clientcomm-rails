<div class="slab">
  <div class="grid">
    <div class="grid__item width-two-thirds shift-one-sixth">
      <div class="form-card form-card--compact">

        <div class="form-card__header">
          <div class="toolbar">
            <div class="toolbar__left">
              <h1 class="form-card__title">Log in</h1>
            </div>
            <% if devise_mapping.registerable? -%>
            <div class="toolbar__right">
              <%= link_to new_registration_path(resource_name), class: "button button--small button--cta" do %>
                <i class="button__icon--left icon-person_add"></i> Sign up
              <% end %>
            </div>
            <% end -%>
          </div>
        </div>

        <div class="form-card__content">
        <%= form_for resource, as: resource_name, url: session_path(resource_name), builder: GcfFormBuilder do |f| %>
          <%= f.gcf_input_field :email, "Email", autofocus: true, classes: ['form-width--name'] %>
          <div class="form-group">
            <%= f.label :password, "Password", class: 'form-question' %>
            <%= f.password_field :password, autocomplete: "off", class: 'text-input form-width--name' =%>
            <p class="text--help"><%= link_to "Forgot your password?", new_password_path(resource_name), class: "link--subtle" %></p>
          </div>
          <div class="form-card__footer">
            <div class="toolbar">
              <div class="toolbar__left">
                <div class="toolbar__item">
                  <%= f.continue "Sign in" %>
                <% if devise_mapping.rememberable? -%>
                  <%= f.gcf_checkbox :remember_me, "Remember me" %>
                <% end -%>
                </div>
              </div>
            </div>
          </div>
        <% end %>

        </div>
      </div>
    </div>
  </div>
</div>
