<% if attachment.image? %>
  <!-- (naturalHeight / naturalWidth) * clientWidth = clientHeight -->
  <img style="max-width: 100%;" src="<%= attachment.media.expiring_url(10) %>" data-image-ratio="<%= attachment.dimensions[1].to_f / attachment.dimensions[0].to_f %>" />
<% else %>
  <a href="<%= attachment.media.expiring_url(10) %>">View Attachment</a>
<% end %>
